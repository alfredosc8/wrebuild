#Rotate WRE/WebGUI logs

##webgui
/var/log/webgui.log {
    notifempty
    daily
    rotate 7
    missingok
    compress
    sharedscripts
    delaycompress
    postrotate
        /sbin/service httpd reload
    endscript
}

##wremonitor
[% config.getRoot %]/var/logs/wremonitor.log {
    notifempty
    daily
    rotate 7
    missingok
    compress
}

